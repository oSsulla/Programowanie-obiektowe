<Window x:Class="Projekt1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt1"
        mc:Ignorable="d"
        Title="MainWindow" Height="435" Width="510">

    <Grid>

        <ListView Name="ItemList" Margin="5,40,5,0" Height="180" VerticalAlignment="Top" SelectionChanged="ItemList_SelectionChanged">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Clear" Click="MenuItem_Click"/>
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" Width="30"  DisplayMemberBinding="{Binding Id}"/>
                    <GridViewColumn Header="Imie" Width="150" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Nazwisko" Width="150" DisplayMemberBinding="{Binding Surname}"/>
                    <GridViewColumn Header="Ocena" Width="150" DisplayMemberBinding="{Binding Mark}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <CheckBox x:Name="EnableCheckBox" Content="Edit"  HorizontalAlignment="Left" Margin="10,230,0,0" VerticalAlignment="Top"/>

        <Grid x:Name="EditGrid" IsEnabled="{Binding ElementName=EnableCheckBox,Path=IsChecked}" Margin="3,260,0,0"  HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <Label Content="Imie" HorizontalAlignment="Left" Margin="3,0,0,0"   VerticalAlignment="Top"/>
            <Label Content="Nazwisko" HorizontalAlignment="Left" Margin="3,20,0,0"   VerticalAlignment="Top"/>
            <Label Content="Ocena" HorizontalAlignment="Left" Margin="3,40,0,0"   VerticalAlignment="Top"/>
            <TextBox Name="NameTextBox" Text="{Binding ElementName=ItemList ,Path=SelectedItem.Name,Mode=OneWay}" HorizontalAlignment="Left"  Margin="70,5,0,0" Width="150" Height="17" VerticalAlignment="Top"/>
            <TextBox Name="SurnameTextBox" Text="{Binding ElementName=ItemList ,Path=SelectedItem.Surname,Mode=OneWay}" HorizontalAlignment="Left"  Margin="70,25,0,0" Width="150" Height="17" VerticalAlignment="Top"/>
            <TextBox Name="MarkTextBox" Text="{Binding ElementName=ItemList ,Path=SelectedItem.Mark,Mode=OneWay}" HorizontalAlignment="Left"  Margin="70,45,0,0" Width="150" Height="17" VerticalAlignment="Top"/>
        </Grid>

